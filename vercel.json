{
    "version": 2,
    "builds": [{
        "src": "app.py",
        "use": "@vercel/python",
        "config": {
            "maxLambdaSize": "15mb",
            "includeFiles": ["static/**", "templates/**"],
            "zeroConfig": true
        }
    }],
    "routes": [
        {
            "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|pdf|docx?|xlsx?|pptx?|txt))",
            "headers": { "Cache-Control": "public, max-age=31536000" },
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ]
}